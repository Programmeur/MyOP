  <bean id="kost1Dao" class="org.projectforge.fibu.kost.Kost1Dao" />
  <bean id="kost2Dao" class="org.projectforge.fibu.kost.Kost2Dao" />
  <bean id="kost2ArtDao" class="org.projectforge.fibu.kost.Kost2ArtDao" />
